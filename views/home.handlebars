<h1>Lista de Usu√°rios</h1>
<div class="container">
    {{#each usuario}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a href="/users/detalhe/{{this.id}}" class="details-btn">Ver detalhe</a>
                <a href="/users/edit/{{this.id}}" class="edit-btn">Editar</a>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input type="submit" value="Excluir" class="delete-btn"/>
                </form>
            </div>
        </div>
    {{/each}}
</div>
