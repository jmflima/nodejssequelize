<h1>Editando {{user.name}}</h1>
<form action="/users/update" method="POST" class="form">
    <input type="hidden" name="id" value={{user.id}} />
    <div class="form-control">
        <label for="nome">Nome</label>
        <input type="text" name="nome" value="{{user.name}}" >
    </div>
    <div class="form-control">
        <label for="ocupacao">Profissão</label>
        <input type="text" name="ocupacao" value="{{user.occupation}}"/>
    </div>
    <div class="form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="noticia" checked />
        {{else}}
            <input type="checkbox" name="noticia" />
        {{/if}}
        <label for="noticia">Enviar promoções</label>
    </div>
    <input type="submit" value="Editar" />
</form>
<div class="address-container">
    <h2>Endereços</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Digite a rua">
        </div>
        <div class="form-control">
            <label for="number">Número</label>
            <input type="text" name="number" placeholder="Digite o número">
        </div>
        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Incluir Endereço" >
    </form>
    <div class="address-list">
        <h2>Lista de endereços</h2>
        {{#each user.Enderecos}}
        <div>
            <p>({{this.id}}) - {{this.street}} - {{this.number}} - {{this.city}}</p>
            <form action="/address/delete" method="POST"/>
                <input type="hidden" name="UserId" value={{this.UserId}}>
                <input type="hidden" name="id" value="{{this.id}}"/>
                <input type="submit" value="Excluir"/>
                <a href="/address/edit/{{this.id}}">Editar</a>
            </form>
        </div>
        {{/each}}
    </div>
</div>